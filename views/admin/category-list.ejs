<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>
</head>

<body>

    <%- include("../partials/nav") %>

        <div class="container mt-3">
            <div class="row">
                <div class="col-md-12 mt-3">
                    <% if (action !="undefined" && action=="edit" ) { %>
                        <div class="alert alert-success">
                            <%= categoryid %> Numaralı Kategori Güncellendi
                        </div>
                        <% } %>

                            <% if (action !="undefined" && action=="create" ) { %>
                                <div class="alert alert-success">
                                    Kategori Eklendi
                                </div>
                                <% } %>

                                    <% if (action !="undefined" && action=="delete" ) { %>
                                        <div class="alert alert-success">
                                            Kategori Silindi
                                        </div>
                                        <% } %>
                                            <table class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 50px;">id</th>
                                                        <th>Name</th>
                                                        <th style="width: 130px;"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% categories.forEach(category => { %>
                                                        <tr>
                                                            <td>#<%= category.dataValues.id %>
                                                            </td>
                                                            <td>
                                                                <%= category.dataValues.name %>
                                                            </td>
                                                            <td>
                                                                <a class="btn btn-sm btn-primary"
                                                                    href="/admin/categories/<%= category.dataValues.id %>">Edit</a>
                                                                <a class="btn btn-sm btn-danger"
                                                                    href="/admin/categories/delete/<%= category.dataValues.id %>">Delete</a>
                                                            </td>
                                                        </tr>
                                                    <% }) %>  
                                                </tbody>
                                            </table>
                </div>
            </div>
        </div>
</body>

</html>